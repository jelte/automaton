{
    "name": "jelte/automoton",
    "description": "More than just a Deployment Tool",
    "license": "MIT",
    "authors": [
        {
            "name": "Jelte Steijaert",
            "email": "jelte@khepri.be"
        }
    ],
    "autoload": {
        "psr-4": {
            "Automaton\\": "src/Automaton/"
        }
    },
    "bin": [
        "bin/automaton"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jelte/automaton-recipes.git"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "doctrine/common": "~2.4",
        "symfony/expression-language": "~2.5",
        "symfony/dependency-injection": "~2.5",
        "symfony/config": "~2.5",
        "symfony/event-dispatcher": "~2.5",
        "symfony/finder": "~2.5",
        "symfony/console": "~2.5",
        "phpseclib/phpseclib": "0.3.*@dev",
        "symfony/process": "~2.5",
        "symfony/stopwatch": "~2.5",
        "jelte/automaton-recipes": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "phpspec/prophecy-phpunit": "~1.0",
        "satooshi/php-coveralls": "dev-master"
    }
}
